{
  "manifest_version": 3,
  "name": "FinGPT",
  "version": "0.6.0",
  "description": "A demo to initialize the extension for FinGPT. This is the locally deployed, dual model display version.",
  "icons": {
    "16": "assets/16x16_icon.png",
    "32": "assets/32x32_icon.png"
  },
  "action": {
    "default_title": "FinGPT Enhanced - Click to toggle chat window",
    "default_icon": {
      "16": "assets/16x16_icon.png",
      "32": "assets/32x32_icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "vendors.js",
        "katex.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "fonts/*.woff",
        "fonts/*.woff2"
      ],
      "matches": [ "<all_urls>" ]
    }
  ]
}
